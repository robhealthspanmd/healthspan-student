@model healthspanmd.web.Models.Content.ContentCardPreviewViewModel

 <div class="card shadow-sm mw-400px">
    <div class="card-header mt-6">
        <a href="/Content/@Model.ContentCardId" class="stretched-link">
        <img src="@Model.CardImageSrc" class="w-100" />
        </a>
    </div>
    <div class="card-body d-flex-column">
        <h3 class="card-title">@Model.Name</h3>
        <div class="w-100">
            @Model.Description
        </div>
    </div>
</div>

